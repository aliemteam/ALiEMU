{
    "compilerOptions": {
        "target": "es5",
        "jsx": "react",
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "es2015",
            "es2016"
        ],
        "experimentalDecorators": true,
        "declaration": false,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "sourceMap": true
    },
    "filesGlob": [
        "{aliemu,lib}/**/*.{ts,tsx}",
        "node_modules/@types/**/index.d.ts",
        "!dist/**"
    ]
}
