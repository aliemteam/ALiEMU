{
  "name": "aliemu",
  "version": "1.0.0",
  "description": "Development taskrunner pipeline",
  "author": "Derek P Sifford",
  "license": "MIT",
  "repository": "https://github.com/AcademicLifeInEM/ALiEMU",
  "scripts": {
    "deploy": "./lib/scripts/deploy",
    "sync": "./lib/scripts/syncup",
    "minify": "./lib/scripts/minify",
    "wp": "wpcmd() { docker exec aliemu_wordpress_1 /bin/bash -c \"sudo -u www-data wp $(echo $@)\"; };wpcmd ",
    "rollback": "if [[ $(git status --porcelain) ]]; then git stash; fi && git checkout master && git fetch && git pull && git revert HEAD --no-edit && npm run deploy && git stash pop",
    "lint": "npm run lint:stylint && npm run lint:tslint && npm run lint:eslint",
    "lint:stylint": "stylint aliemu/styles -c .stylintrc",
    "lint:tslint": "tslint -e \"node_modules/**/*\" \"**/*.+(ts|tsx)\" -t stylish",
    "lint:eslint": "eslint \"aliemu/**/*.js\" \"lib/**/*.js\" \"./*.js\" --ignore-pattern \"aliemu/vendor/*\"",
    "build": "NODE_ENV=production node_modules/.bin/gulp _build",
    "start": "NODE_ENV=development node --max_old_space_size=8192 node_modules/.bin/gulp _dev",
    "pretest": "npm run lint",
    "test": "jest"
  },
  "dependencies": {
    "@types/enzyme": "^2.5.37",
    "@types/jest": "^15.1.32",
    "@types/moment": "^2.13.0",
    "@types/react": "^0.14.46",
    "@types/react-addons-test-utils": "^0.14.15",
    "@types/react-datepicker": "^0.28.6",
    "@types/react-dom": "^0.14.18",
    "@types/sinon": "^1.16.31",
    "mobx": "^2.6.2",
    "mobx-react": "^4.0.3",
    "moment": "^2.15.2",
    "react": "^15.3.2",
    "react-datepicker": "^0.34.0",
    "react-dom": "^15.3.2",
    "typescript": "^2.1.0-dev.20161109"
  },
  "devDependencies": {
    "autoprefixer": "^6.5.2",
    "awesome-typescript-loader": "^3.0.0-beta.0",
    "babel-core": "^6.18.2",
    "babel-loader": "^6.2.7",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-register": "^6.18.0",
    "browser-sync": "^2.17.5",
    "coveralls": "^2.11.14",
    "css-loader": "^0.25.0",
    "del": "^2.2.2",
    "enzyme": "^2.5.1",
    "eslint": "^3.9.1",
    "eslint-config-airbnb-base": "^10.0.1",
    "eslint-plugin-import": "^2.2.0",
    "gulp": "github:gulpjs/gulp#4.0",
    "gulp-csso": "^2.0.0",
    "gulp-imagemin": "^3.1.1",
    "gulp-insert": "^0.5.0",
    "gulp-jade2php": "^1.0.4",
    "gulp-rename": "^1.2.2",
    "gulp-replace": "^0.5.4",
    "gulp-sourcemaps": "^2.2.0",
    "gulp-stylus": "^2.6.0",
    "gulp-svgmin": "^1.2.3",
    "gulp-uglify": "^2.0.0",
    "jest-cli": "^17.0.0",
    "merge-stream": "^1.0.0",
    "mobx-react-devtools": "^4.2.9",
    "poststylus": "^0.2.3",
    "react-addons-test-utils": "^15.3.2",
    "rucksack-css": "^0.8.6",
    "sinon": "^1.17.6",
    "style-loader": "^0.13.1",
    "stylint": "^1.5.7",
    "ts-loader": "^1.1.0",
    "tslint": "^3.15.1",
    "tslint-microsoft-contrib": "git://github.com/Microsoft/tslint-microsoft-contrib.git#releases",
    "tslint-react": "^1.1.0",
    "webpack": "^2.1.0-beta.25",
    "webpack-stream": "^3.2.0"
  },
  "babel": {
    "presets": [
      "es2015",
      "react"
    ],
    "compact": true
  },
  "jest": {
    "transform": {
      ".*": "./lib/utils/jestPreprocessor.js"
    },
    "testRegex": "__tests__/.*\\.(js|ts|tsx)$",
    "automock": true,
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "unmockedModulePathPatterns": [
      "react",
      "react-dom",
      "react-addons-test-utils",
      "enzyme",
      "sinon",
      "<rootDir>/lib/utils/Fixtures"
    ],
    "verbose": true,
    "collectCoverage": true,
    "coverageDirectory": "tmp/coverage",
    "collectCoverageFrom": [
      "aliemu/**/*.{ts,tsx}",
      "!aliemu/**/index.{ts,tsx}",
      "!**/{vendor,__tests__}/**"
    ]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "rules": {
      "no-use-before-define": 0,
      "no-plusplus": 0,
      "comma-dangle": 0,
      "import/no-extraneous-dependencies": 0,
      "indent": [
        "error",
        4
      ]
    },
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    }
  }
}
