{
  "name": "aliemu",
  "version": "1.1.0",
  "description": "Development taskrunner pipeline",
  "author": "Derek P Sifford",
  "license": "MIT",
  "repository": "https://github.com/AcademicLifeInEM/ALiEMU",
  "scripts": {
    "lint": "yarn lint:stylint && yarn lint:tslint && yarn lint:eslint",
    "lint:stylint": "stylint aliemu/styles -c .stylintrc",
    "lint:tslint": "tslint --project . -t codeFrame",
    "lint:eslint": "eslint \"aliemu/**/*.js\" \"./*.js\" --ignore-pattern \"aliemu/vendor/*\"",
    "build": "NODE_ENV=production node_modules/.bin/gulp _build",
    "start": "NODE_ENV=development node --max_old_space_size=8192 node_modules/.bin/gulp _dev",
    "deploy": "yarn test && yarn build && ./lib/scripts/deploy aliemu",
    "deploy-all": "yarn test && yarn build && ./lib/scripts/deploy all",
    "deploy-theme": "yarn test && ./lib/scripts/deploy theme",
    "sync": "./lib/scripts/sync",
    "pretest": "yarn lint",
    "test": "jest --coverage"
  },
  "dependencies": {
    "@types/enzyme": "^2.7.4",
    "@types/jest": "^19.2.2",
    "@types/react": "^15.0.12",
    "@types/react-addons-test-utils": "^0.14.17",
    "@types/react-datepicker": "^0.40.0",
    "@types/react-dom": "^0.14.23",
    "mobx": "^3.1.0",
    "mobx-react": "^4.1.0",
    "moment": "^2.17.1",
    "react": "^15.4.2",
    "react-datepicker": "^0.44.0",
    "react-dom": "^15.4.2",
    "typescript": "next",
    "wp-graphql": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer-stylus": "^0.13.0",
    "babel-core": "^6.23.1",
    "babel-loader": "^6.3.2",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.2.1",
    "babel-preset-react": "^6.23.0",
    "browser-sync": "^2.18.8",
    "create-react-class": "^15.5.1",
    "css-loader": "^0.28.0",
    "del": "^2.2.2",
    "enzyme": "^2.7.1",
    "eslint": "^3.16.1",
    "eslint-config-airbnb-base": "^11.1.0",
    "eslint-plugin-import": "^2.2.0",
    "gulp": "gulpjs/gulp#4.0",
    "gulp-imagemin": "^3.1.1",
    "gulp-insert": "^0.5.0",
    "gulp-replace": "^0.5.4",
    "gulp-sourcemaps": "^2.4.1",
    "gulp-stylus": "^2.6.0",
    "gulp-uglify": "^2.0.1",
    "jest-cli": "^19.0.1",
    "merge-stream": "^1.0.0",
    "mobx-react-devtools": "^4.2.11",
    "react-addons-test-utils": "^15.4.2",
    "style-loader": "^0.16.1",
    "stylint": "^1.5.9",
    "ts-jest": "^19.0.0",
    "ts-loader": "^2.0.1",
    "tslint": "^5.0.0",
    "webpack": "^2.2.1",
    "webpack-bundle-analyzer": "^2.3.0",
    "webpack-stream": "^3.2.0"
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testResultsProcessor": "<rootDir>/node_modules/ts-jest/coverageprocessor.js",
    "testRegex": "__tests__/.*\\.(js|ts|tsx)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "json"
    ],
    "verbose": true,
    "collectCoverageFrom": [
      "aliemu/**/*.{ts,tsx}",
      "!aliemu/**/devTools.ts",
      "!aliemu/**/index.{ts,tsx}",
      "!**/{vendor,__tests__}/**",
      "!**/*.d.ts"
    ]
  }
}
