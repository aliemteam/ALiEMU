$pager-btn
    width 1.5em
    height 1.5em
    line-height 1.5em
    text-align center
    cursor pointer
    border 1px solid $primary
    border-radius 2px
    color $primary
    background white
    margin 5px 2px
    user-select none
    &:hover
        border-color $secondary
        box-shadow 0 0 .2em rgba(0,0,0,0.2)
    &:active
        box-shadow inset 0 0 1em rgba(0,0,0,0.1)

$export-btn
    padding 10px 0
    font-size 0.9em
    white-space nowrap
    color white
    padding 5px 30px
    max-width 300px
    background $primary
    user-select none
    margin-left 9px
    &:hover
        cursor pointer
        background $secondary


+prefix-classes('au-edudash-')
    .shadowbox
        background white
        box-shadow $box-shadow
        box-sizing border-box
        margin-bottom 30px
        h1
            background $primary
            color white
            text-align center
            padding 10px
            font 600 1.5em Lato
        h2
            font-size 1.1em
            background $gray-dark
            color white
            text-align center
            padding 5px 0
            width 100%

    .exportbtn
        @extend $export-btn
    .exportbtn-disabled
        @extend $export-btn
        opacity 0.5
        pointer-events none

    .pager
        display flex
        justify-content flex-end
        flex-wrap wrap
        padding 2.5px
        .pager-btn
            @extend $pager-btn
        .pager-btn-active
            @extend $pager-btn
            color white
            background $primary
