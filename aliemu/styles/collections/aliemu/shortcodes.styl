// Capsules box ----------------------------------------------------------------
.capsule-box
    margin: 0 0 $block-margin 0
    box-shadow: $shadow-2dp
    border-radius: 2px

.capsule-box__heading
    color: white
    border-radius: 2px 2px 0 0
    height: 40px
    line-height: 40px
    font-weight: 500
    font-size: 20px
    text-align: center
    background-color: $capsules-primary
    letter-spacing: 1px

.capsule-box__body
    padding: 20px

.capsule-box__body--capsule
    font-size: 1.1em
