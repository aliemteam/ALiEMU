$pager-btn
    width: 1.5em
    height: 1.5em
    line-height: 1.5em
    text-align: center
    cursor: pointer
    border: 1px solid $primary
    border-radius: 2px
    color: $primary
    background: white
    margin: 5px 2px
    user-select: none
    &:hover
        border-color: darken($primary, 5)
        box-shadow: 0 0 .2em rgba(0,0,0,0.2)
    &:active
        box-shadow: inset 0 0 1em rgba(0,0,0,0.1)

+prefix-classes('au-edudash-')
    .shadowbox
        background: white
        box-shadow: $shadow-2dp
        box-sizing: border-box
        margin-bottom: 30px
        h1
            background: $primary
            color: white
            text-align: center
            padding: 10px
            font: 600 1.5em
        h2
            font-size: 1.1em
            margin: 0
            background: $gray-dark
            color: white
            text-align: center
            padding: 5px 0
            width: 100%

.pagination
    display: flex
    justify-content: flex-end
    flex-wrap: wrap
    padding: 2.5px
