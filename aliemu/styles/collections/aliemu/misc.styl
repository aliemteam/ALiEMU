// Particles -------------------------------------------------------------------
#particles
    position: fixed
    z-index: 1
    width: 100%
    height: 100%
    top: 0
    left: 0
    background-color: $secondary
    background-image: url('')
    background-size: cover
    background-repeat: no-repeat
    background-position: 50% 50%
    canvas
        width: 100%
        height: 100%
        transform: scale(1)
        display: block
        vertical-align: bottom

// Login Page ------------------------------------------------------------------
.login-box
    background: white
    box-shadow: $shadow-2dp
    padding: 20px
    border-radius: 2px

// Contact Page ----------------------------------------------------------------
.contact-form
    box-shadow: $shadow-2dp
    background: white
    border-radius: 2px
    padding: 20px
    width: 80%
    margin: auto
    margin-top: 0

.contact-form__row
    min-height: 50px
    align-items: center
    justify-content: space-between
    display: flex
    width: 100%
    margin-bottom: $block-margin

.contact-form__row_submit
    align-items: flex-start

.contact-form__item
    display: flex
    flex: auto
    width: 100%
    &:first-of-type label
        padding-left: 0
    input
        flex: auto
    label
        padding: 0 20px

// Team Page ------------------------------------------------------------
.team-member
    display: flex
    flex-direction: column
    max-width: 250px
    margin: 20px

.team-member__photo img
    max-height: 250px
    max-width: 250px
    height: 100%
    width: 100%
    border-radius: 250px
    margin-bottom: 10px

.team-member__info
    display: flex
    flex-direction: column
    flex: auto

.team-member__name
    display: flex
    h4
        display: inline-block
    div
        display: inline-block
        padding-right: 5px

