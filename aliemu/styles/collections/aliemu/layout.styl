html, body
    height: 100%

#sidebar
    display: none

#page-container
    background: $secondary
    display: flex
    flex-direction: column
    min-height: 100%

#main-content
    margin-top: $block-margin
    flex: 1
    display: flex
    height: 100%
    position: relative
    flex-direction: column
    justify-content: center
    margin-bottom: $block-margin

#main-content.main-content--no-margin
    margin-top: 0

#content-area,
.content-area
    background: white
    padding: 20px
    border-radius: 2px
    box-shadow: $shadow-2dp

.flex-container
    width: 100%
    height: 100%
    display: flex
    justify-content: center
    align-items: center

.flex-container--column
    flex-direction: column

.container
    width: 80%
    max-width: 1080px
    margin: auto

@media screen and (max-width: 400px)
    .container
        width: 95%
