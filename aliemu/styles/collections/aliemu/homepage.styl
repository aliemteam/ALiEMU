// @stylint off
+prefix-classes('au-')
    .homepage
    .faculty-start
        #row-1
            *
                z-index: 2
            display: flex
            margin: 0 5%
            height: calc(100vh - 50px)
            padding-bottom: 20vh
            justify-content: center
            align-items: center
            .container
                position: relative
                width: 500px
        @media (max-width 480px)
            #row-1
                padding-bottom: 0

        for i in 2..7
            #row-{i}
                @extend .au-homepage #row-1
                height: auto
                padding: 0
                .container
                    margin: 50px 0
                    height: auto
                    width: 800px

        .splash
            display: flex
            height: 100%
            flex-direction: column
            justify-content: space-between
            > div
                margin: 5px 0
        .general
            display: flex
            flex: auto
            flex-flow: column
            background: white
            box-shadow: $shadow-2dp
            border-radius: 3px
            text-align: center
            padding: 25px 0
            div
                position: relative
                flex: auto
                display: flex
                justify-content: center
                align-items: center
                text-align: center
                h1
                    color: $primary
                    margin: 0 0 10px 0
                    padding: 0
                    &.loggedin
                        color: $gray-dark
                a
                    @extends .btn
                    @extends .btn--primary
                    margin: 0 5px
        .faculty
            @extend .au-homepage .au-general
            background: $gray-dark
            div
                h1
                    color: white
                a
                    @extends .btn
                    @extends .btn--primary
                    background: white
                    color: $gray-dark

        .login
            background: $primary
            display: flex
            flex: auto
            padding: 25px 0
            border-radius: 3px
            text-align: center
            div
                display: flex
                justify-content: center
                align-items: center
                flex: auto
                a
                    @extends .btn
                    @extends .btn--primary

        .info-card
            display: flex
            flex: auto
            flex-flow: column
            box-shadow: $shadow-2dp
            border-radius: 3px
            .info-header
                border-radius: 3px 3px 0 0
                background-color: $primary
                h1
                    margin: 0
                    color: white
                    line-height: 1.5em
                    padding: 0
                    text-align: center
            .info-text
                background: white
                padding: 15px 20px
                text-align: left
                p
                    color: $gray-dark
                    font-weight: 300
                ol
                    padding: 1em 0
                a
                    font-weight: 600

        .series-logos
            display: flex
            justify-content: space-around
            background: white
            div
                max-width: 200px
                display: flex
                align-items: center
                padding: 10px
                margin-top: 20px
            &.alt-logos
                background: transparent
                div
                    display: flex
                    padding: 10px
                    align-items: center
                    margin-top: 0
                    background: transparent
